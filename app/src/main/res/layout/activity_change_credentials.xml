<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.adamitskiy.anatoliy.the_cook_off.ChangeCredentialsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="vertical"
        android:paddingTop="25dp">


        <android.support.design.widget.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <EditText
                android:layout_marginTop="50dp"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:hint=" EMAIL"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:textSize="16dp"
                android:textColorHint="#ff868686"
                android:id="@+id/emailChangeTextField"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp">

            <EditText
                android:layout_marginTop="5dp"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:hint=" USERNAME"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:textSize="16dp"
                android:textColorHint="#ff868686"
                android:id="@+id/usernameChangeTextField"/>

        </android.support.design.widget.TextInputLayout>




        <android.support.design.widget.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

        <EditText
            android:layout_marginTop="50dp"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint=" PASSWORD"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textSize="16dp"
            android:inputType="textPassword"
            android:textColorHint="#ff868686"
            android:id="@+id/passwordChangeTextField"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp">

        <EditText
            android:layout_marginTop="5dp"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint=" CONFIRM PASSWORD"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textSize="16dp"
            android:inputType="textPassword"
            android:textColorHint="#ff868686"
            android:id="@+id/passwordConfirmChangeTextField"/>

        </android.support.design.widget.TextInputLayout>

        <Button
            android:layout_marginTop="35dp"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="Update Information"
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:background="@color/DarkPrimaryColor"
            android:id="@+id/updateInfoButton"/>

    </LinearLayout>

</ScrollView>
