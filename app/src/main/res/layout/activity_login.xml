<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/PrimaryColor"
    android:id="@+id/logInScroll">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="12.5dp"
            android:lineSpacingMultiplier="1.2"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-medium"
            android:textSize="20dp"
            android:text="The Cook-Off"
            android:textAllCaps="false"/>

    </LinearLayout>

    <TextView
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="Log in to achieve greatness."
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:textSize="14dp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/logInToAchieve"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="vertical"
        android:paddingTop="25dp"
        android:layout_marginTop="100dp">

    <EditText
        android:layout_marginTop="50dp"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:hint="USERNAME"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:textSize="16dp"
        android:background="#ffffff"
        android:textColorHint="#ff868686"
        android:id="@+id/usernameTextField"/>

    <EditText
        android:layout_marginTop="5dp"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:hint="PASSWORD"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:textSize="16dp"
        android:background="#ffffff"
        android:inputType="textPassword"
        android:textColorHint="#ff868686"
        android:id="@+id/passwordTextField"/>

    <Button
        android:layout_marginTop="35dp"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:text="Log In"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:background="@color/DarkPrimaryColor"
        android:id="@+id/logInButton"/>

        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="149dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="Facebook"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:background="#3b5998"
                android:id="@+id/facebookLoginButton"/>

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent" />

            <Button
                android:layout_width="149dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="Twitter"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:background="#4099ff"
                android:id="@+id/twitterLoginButton"/>

        </LinearLayout>

        <Button
            android:layout_marginTop="5dp"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:text="Forgot Password? Tap Here"
            android:textColor="#ffffff"
            android:textAllCaps="false"
            android:textSize="16dp"
            android:background="@android:color/transparent"
            android:id="@+id/forgotPasswordButton"/>

        <Button
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:text="No Account? Sign Up Here"
            android:textColor="#ffffff"
            android:textAllCaps="false"
            android:textSize="16dp"
            android:background="@android:color/transparent"
            android:id="@+id/signUpButton"/>

    </LinearLayout>

    </RelativeLayout>

</ScrollView>