<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp">

    <ImageView
        android:id="@+id/main_feed_image_view"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="75dp"
        android:paddingTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/main_feed_achievement_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Some user has cooked this food and achieved 100 points."
            android:textSize="18sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <Button
                android:id="@+id/main_feed_like_button"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="#1e958c"
                android:background="@color/white"
                android:gravity="center"
                android:layout_weight=".5"
                android:text="Like"/>

                <Button
                android:id="@+id/main_feed_comment_button"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="#1e958c"
                android:background="@color/white"
                android:gravity="center"
                android:layout_weight=".5"
                android:text="Comment"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>